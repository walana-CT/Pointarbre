# Configuration pnpm

# Utiliser le préfixe strict pour éviter les dépendances implicites
strict-peer-dependencies=false

# Installer les devDependencies par défaut
auto-install-peers=true

# Créer un fichier pnpm-lock.yaml pour chaque installation
lockfile-only=false

# Shamefully-hoist pour certains packages qui en ont besoin
shamefully-hoist=false

# Registry
registry=https://registry.npmjs.org/
